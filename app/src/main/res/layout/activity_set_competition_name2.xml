<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trc3543.trcscoutingapp.SetCompetitionName">

    <EditText
        android:id="@+id/matchNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="145dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="Match #"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/blue2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/compName"
        android:layout_width="368dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Competition Name"
        android:inputType="textPersonName"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchNum" />

    <TextView
        android:id="@+id/describText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:text="Match Type"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/compName" />

    <Spinner
        android:id="@+id/CompType"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:entries="@array/game_types"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/describText1" />

    <Button
        android:id="@+id/ConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:contentDescription="Confirm Selection."
        android:onClick="confirmTypes"
        android:text="Confirm"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CompType" />

    <Button
        android:id="@+id/GoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="cancel"
        android:text="Cancel"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/ConfirmButton"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmButton" />

    <EditText
        android:id="@+id/red1"
        android:layout_width="130dp"
        android:layout_height="39dp"
        android:layout_marginBottom="312dp"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="Red 1"
        android:inputType="textPersonName"
        android:shadowColor="@android:color/holo_red_light"
        android:textColor="@android:color/holo_red_light"
        android:textColorHighlight="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        android:textColorLink="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blue1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/red2"
        android:layout_width="131dp"
        android:layout_height="39dp"
        android:layout_marginBottom="178dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Red 2"
        android:inputType="textPersonName"
        android:shadowColor="@android:color/holo_red_light"
        android:textColor="@android:color/holo_red_light"
        android:textColorHighlight="@android:color/holo_red_light"
        android:textColorHint="@android:color/holo_red_light"
        android:textColorLink="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blue2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/blue1"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Blue 1"
        android:inputType="textPersonName"
        android:shadowColor="@android:color/holo_blue_dark"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toTopOf="@+id/blue2"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/blue2"
        android:layout_width="151dp"
        android:layout_height="41dp"
        android:layout_marginBottom="276dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Blue 2"
        android:inputType="textPersonName"
        android:shadowColor="@android:color/holo_blue_dark"
        android:textColor="@android:color/holo_blue_dark"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorHint="@android:color/holo_blue_dark"
        android:textColorLink="@android:color/holo_blue_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/conditionI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Condition I"
        app:layout_constraintStart_toEndOf="@+id/red2"
        app:layout_constraintTop_toBottomOf="@+id/red2" />

    <CheckBox
        android:id="@+id/conditionII"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="Condition II"
        app:layout_constraintEnd_toEndOf="@+id/conditionI"
        app:layout_constraintTop_toBottomOf="@+id/conditionI" />

</android.support.constraint.ConstraintLayout>
