<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trc3543.trcscoutingapp.SetCompetitionName">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="trc3543.trcscoutingapp.SetCompetitionName">

        <EditText
            android:id="@+id/matchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Match #"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/compName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/compName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginBottom="57dp"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginTop="54dp"
            android:ems="10"
            android:hint="Competition Name"
            android:inputType="textPersonName"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/red2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/describText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Match Type"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/CompType"
            app:layout_constraintStart_toStartOf="@+id/CompType" />

        <Spinner
            android:id="@+id/CompType"
            android:layout_width="358dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="244dp"
            android:entries="@array/game_types"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/ConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="216dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="484dp"
            android:contentDescription="Confirm Selection."
            android:onClick="confirmTypes"
            android:text="Confirm"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.902"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/red1"
            android:layout_width="153dp"
            android:layout_height="39dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Red 1"
            android:inputType="textPersonName"
            android:shadowColor="@android:color/holo_red_light"
            android:textColor="@android:color/holo_red_light"
            android:textColorHighlight="@android:color/holo_red_light"
            android:textColorHint="@android:color/holo_red_light"
            android:textColorLink="@android:color/holo_red_light"
            app:layout_constraintBottom_toTopOf="@+id/red2"
            app:layout_constraintEnd_toEndOf="@+id/red2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/blue1"
            app:layout_constraintVertical_bias="0.819" />

        <EditText
            android:id="@+id/red2"
            android:layout_width="153dp"
            android:layout_height="39dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="35dp"
            android:layout_marginStart="8dp"
            android:ems="10"
            android:hint="Red 2"
            android:inputType="textPersonName"
            android:shadowColor="@android:color/holo_red_light"
            android:textColor="@android:color/holo_red_light"
            android:textColorHighlight="@android:color/holo_red_light"
            android:textColorHint="@android:color/holo_red_light"
            android:textColorLink="@android:color/holo_red_light"
            app:layout_constraintBottom_toTopOf="@+id/CompType"
            app:layout_constraintEnd_toStartOf="@+id/blue2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/compName" />

        <EditText
            android:id="@+id/blue1"
            android:layout_width="160dp"
            android:layout_height="39dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Blue 1"
            android:inputType="textPersonName"
            android:shadowColor="@android:color/holo_blue_dark"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/holo_blue_dark"
            android:textColorLink="@android:color/holo_blue_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/blue2"
            app:layout_constraintTop_toBottomOf="@+id/compName" />

        <EditText
            android:id="@+id/blue2"
            android:layout_width="164dp"
            android:layout_height="39dp"
            android:layout_marginBottom="29dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:hint="Blue 2"
            android:inputType="textPersonName"
            android:shadowColor="@android:color/holo_blue_dark"
            android:textColor="@android:color/holo_blue_dark"
            android:textColorHighlight="@android:color/holo_blue_dark"
            android:textColorHint="@android:color/holo_blue_dark"
            android:textColorLink="@android:color/holo_blue_dark"
            app:layout_constraintBottom_toTopOf="@+id/CompType"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/blue1"
            app:layout_constraintVertical_bias="0.0" />

        <Space
            android:id="@+id/space2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/conditionI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Sample Cond. I"
            app:layout_constraintBottom_toTopOf="@+id/conditionII"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.993" />

        <CheckBox
            android:id="@+id/conditionII"
            android:layout_width="129dp"
            android:layout_height="55dp"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="Sample Cond. II"
            app:layout_constraintBottom_toTopOf="@+id/ConfirmButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="484dp"
            android:onClick="cancel"
            android:text="Cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toEndOf="@+id/ConfirmButton"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/describText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="Spectating Team"
            app:layout_constraintBottom_toTopOf="@+id/SpectatingSpinner"
            app:layout_constraintStart_toStartOf="@+id/SpectatingSpinner" />

        <Spinner
            android:id="@+id/SpectatingSpinner"
            android:layout_width="358dp"
            android:layout_height="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:entries="@array/spectating_types"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CompType" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>