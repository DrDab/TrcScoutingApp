<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:numberpicker="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/matchType"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="17dp"
                android:entries="@array/game_types"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/matchNum"
                android:layout_width="195dp"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="Match #"
                android:inputType="numberSigned"
                app:layout_constraintLeft_toRightOf="@+id/matchType"
                app:layout_constraintStart_toEndOf="@+id/matchType"
                app:layout_constraintTop_toTopOf="@+id/matchType" />

            <EditText
                android:id="@+id/teamNum"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Team #"
                android:inputType="numberSigned"
                app:layout_constraintLeft_toLeftOf="@+id/matchType"
                app:layout_constraintStart_toStartOf="@+id/matchType"
                app:layout_constraintTop_toBottomOf="@+id/matchNum" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_marginTop="17dp"
                android:entries="@array/spectating_types"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/teamNum" />

            <RadioGroup
                android:id="@+id/robotStartRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="@+id/teamNum"
                app:layout_constraintStart_toStartOf="@+id/teamNum"
                app:layout_constraintTop_toBottomOf="@+id/spinner2">

                <RadioButton
                    android:id="@+id/startTop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Top?" />

                <RadioButton
                    android:id="@+id/startMid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Middle?" />

                <RadioButton
                    android:id="@+id/startLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Low?" />

            </RadioGroup>

            <CheckBox
                android:id="@+id/autonomousCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Autonomous?"
                app:layout_constraintEnd_toEndOf="@+id/teamNum"
                app:layout_constraintRight_toRightOf="@+id/teamNum"
                app:layout_constraintTop_toTopOf="@+id/robotStartRadioGroup" />

            <CheckBox
                android:id="@+id/crossedLineCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crosses Line?"
                app:layout_constraintLeft_toLeftOf="@+id/autonomousCB"
                app:layout_constraintStart_toStartOf="@+id/autonomousCB"
                app:layout_constraintTop_toBottomOf="@+id/autonomousCB" />

            <CheckBox
                android:id="@+id/offplatformCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off Platform?"
                app:layout_constraintLeft_toLeftOf="@+id/crossedLineCB"
                app:layout_constraintStart_toStartOf="@+id/crossedLineCB"
                app:layout_constraintTop_toBottomOf="@+id/crossedLineCB" />

            <TextView
                android:id="@+id/rocketText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="Rocket"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offplatformCB" />

            <ImageView
                android:id="@+id/rocketImage"
                android:layout_width="150dp"
                android:layout_height="225dp"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rocketText"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/deepspace_rocket" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@+id/robotStartRadioGroup"
                app:layout_constraintStart_toStartOf="@+id/robotStartRadioGroup"
                app:layout_constraintTop_toTopOf="@+id/rocketImage" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hatches"
                android:textColor="@android:color/black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/offplatformCB"
                app:layout_constraintRight_toRightOf="@+id/offplatformCB"
                app:layout_constraintTop_toTopOf="@+id/rocketImage" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormCargoTop"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5"
                numberpicker:value="0" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormCargoMid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sandstormCargoTop"
                numberpicker:value="0" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormCargoLow"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sandstormCargoMid"
                numberpicker:value="0" />

            <!-- OWO -->

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormHatchTop"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="35dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6"
                numberpicker:value="0" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormHatchMid"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sandstormHatchTop"
                numberpicker:value="0" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormHatchLow"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sandstormHatchMid"
                numberpicker:value="0" />

            <TextView
                android:id="@+id/cargoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:text="Cargo Ship"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rocketImage" />

            <ImageView
                android:id="@+id/cargoShipImage"
                android:layout_width="274dp"
                android:layout_height="84dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cargoText"
                numberpicker:srcCompat="@drawable/deepspace_cargoship" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76dp"
                android:layout_marginStart="76dp"
                android:layout_marginTop="12dp"
                android:text="Cargo"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cargoShipImage" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="76dp"
                android:layout_marginRight="76dp"
                android:layout_marginTop="12dp"
                android:text="Hatches"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cargoShipImage" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormCargoShip"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView9"
                numberpicker:value="0" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormHatchesShip"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView10"
                numberpicker:value="0" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="Cargo Dropped"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sandstormCargoShip" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="8dp"
                android:text="Hatches Dropped"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sandstormHatchesShip" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormCargoDropped"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView11"
                numberpicker:value="0" />

            <com.travijuu.numberpicker.library.NumberPicker
                android:id="@+id/sandstormHatchesDropped"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView12"
                numberpicker:value="0" />

            <EditText
                android:id="@+id/sandstormNotes"
                android:layout_width="237dp"
                android:layout_height="171dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="192dp"
                android:ems="10"
                android:hint="Notes :3"
                android:inputType="textMultiLine"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cargoShipImage" />

            <Space
                android:id="@+id/space"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</RelativeLayout>